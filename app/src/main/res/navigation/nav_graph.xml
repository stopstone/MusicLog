<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.stopstone.musicplaylist.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_track_detail"
            app:destination="@id/navigation_track_detail" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_music_search"
            app:destination="@id/navigation_music_search" />
    </fragment>

    <fragment
        android:id="@+id/navigation_play_list"
        android:name="com.stopstone.musicplaylist.ui.playlist.PlayListFragment"
        android:label="PlayListFragment"
        tools:layout="@layout/fragment_play_list" />

    <fragment
        android:id="@+id/navigation_my"
        android:name="com.stopstone.musicplaylist.ui.my.MyFragment"
        android:label="MyFragment"
        tools:layout="@layout/fragment_my">
        <action
            android:id="@+id/action_navigation_user_setting"
            app:destination="@id/navigation_user_setting" />
        <action
            android:id="@+id/action_navigation_insta_share_setting"
            app:destination="@id/navigation_insta_share_setting" />
        <action
            android:id="@+id/action_navigation_emotion_setting"
            app:destination="@id/navigation_emotion_setting" />
        <action
            android:id="@+id/action_signature_music"
            app:destination="@id/navigation_signature_music" />
        <action
            android:id="@+id/action_my_to_music_search"
            app:destination="@id/navigation_music_search" />
        <action
            android:id="@+id/action_navigation_signature_list"
            app:destination="@id/navigation_signature_list" />
    </fragment>

    <activity
        android:id="@+id/navigation_track_detail"
        android:name="com.stopstone.musicplaylist.ui.detail.TrackDetailActivity"
        android:label="activity_track_detail"
        tools:layout="@layout/activity_track_detail">
        <argument
            android:name="DailyTrack"
            app:argType="com.stopstone.musicplaylist.domain.model.CalendarDay" />
    </activity>

    <activity
        android:id="@+id/navigation_music_search"
        android:name="com.stopstone.musicplaylist.ui.music_search.MusicSearchActivity"
        android:label="MusicSearchActivity"
        tools:layout="@layout/activity_music_search">
        <argument
            android:name="searchMode"
            android:defaultValue="NORMAL"
            app:argType="string" />
    </activity>
    <activity
        android:id="@+id/navigation_user_setting"
        android:name="com.stopstone.musicplaylist.ui.user_setting.UserSettingActivity"
        android:label="UserSettingActivity"
        tools:layout="@layout/activity_user_setting" />
    <activity
        android:id="@+id/navigation_insta_share_setting"
        android:name="com.stopstone.musicplaylist.ui.insta_share_setting.InstagramShareSettingActivity"
        android:label="InstagramShareSettingActivity"
        tools:layout="@layout/activity_instagram_share_setting" />
    <activity
        android:id="@+id/navigation_emotion_setting"
        android:name="com.stopstone.musicplaylist.ui.emotion_setting.EmotionSettingActivity"
        android:label="EmotionSettingActivity"
        tools:layout="@layout/activity_emotion_setting" />
    <activity
        android:id="@+id/navigation_signature_music"
        android:name="com.stopstone.musicplaylist.ui.signature_music.SignatureMusicActivity"
        android:label="SignatureMusicActivity"
        tools:layout="@layout/activity_signature_music" />
    <activity
        android:id="@+id/navigation_signature_list"
        android:name="com.stopstone.musicplaylist.ui.signature_list.SignatureListActivity"
        android:label="SignatureListActivity"
        tools:layout="@layout/activity_signature_list" />

</navigation>
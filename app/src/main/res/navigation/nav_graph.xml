<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.stopstone.musicplaylist.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_track_detail"
            app:destination="@id/navigation_track_detail" />
        <action
            android:id="@+id/action_home_to_setting"
            app:destination="@id/navigation_setting" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.stopstone.musicplaylist.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_search_to_track_confirm_dialog"
            app:destination="@id/navigation_track_confirm_dialog" />
    </fragment>
    <dialog
        android:id="@+id/navigation_track_confirm_dialog"
        android:name="com.stopstone.musicplaylist.ui.search.TrackConfirmDialogFragment"
        android:label="TrackConfirmDialogFragment"
        tools:layout="@layout/fragment_track_confirm_dialog">
        <argument
            android:name="track"
            app:argType="com.stopstone.musicplaylist.ui.model.TrackUiState" />
    </dialog>
    <fragment
        android:id="@+id/navigation_play_list"
        android:name="com.stopstone.musicplaylist.ui.playlist.PlayListFragment"
        android:label="PlayListFragment"
        tools:layout="@layout/fragment_play_list" />
    <activity
        android:id="@+id/navigation_track_detail"
        android:name="com.stopstone.musicplaylist.ui.detail.TrackDetailActivity"
        android:label="activity_track_detail"
        tools:layout="@layout/activity_track_detail" >
        <argument
            android:name="DailyTrack"
            app:argType="com.stopstone.musicplaylist.domain.model.CalendarDay" />
    </activity>
    <activity
        android:id="@+id/navigation_setting"
        android:name="com.stopstone.musicplaylist.ui.setting.SettingActivity"
        android:label="activity_setting"
        tools:layout="@layout/activity_setting" />
</navigation>
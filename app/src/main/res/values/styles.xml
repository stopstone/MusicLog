<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetModal</item>
    </style>

    <style name="AppBottomSheetModal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="behavior_peekHeight">340dp</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_thin</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ToolbarTitleStyle.S24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppRoundedImage">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppRoundedImage.Large">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Widget.MusicLog.EmotionChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:checkable">true</item>
        <item name="chipBackgroundColor">@color/chip_emotion_background_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MusicLog.EmotionChip</item>
    </style>

    <style name="ShapeAppearance.MusicLog.EmotionChip" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

</resources>